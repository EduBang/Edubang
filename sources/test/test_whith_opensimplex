import pygame as pg
from geometry import Vector


def main():
    pg.init()
    screen = pg.display.set_mode((1000, 1000))  # Initialiser la fenÃªtre d'affichage
    pg.display.set_caption("Test Rendering Planets")
    clock = pg.time.Clock()
    running = True

    while running:
        for event in pg.event.get():
            if event.type == pg.QUIT:
                running = False

        screen.fill((0, 0, 0))

        pg.display.flip()
        clock.tick(60)  # Cap the frame rate at 60 FPS


    pg.quit()

main()
